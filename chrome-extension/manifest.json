{
  "manifest_version": 3,
  "name": "Happy Message Extension",
  "version": "1.0",
  "description": "Click to see a happy message!",
  "permissions": [
    "storage",
    "webRequest",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://app.zebihr.com/*",
    "https://api.zebihr.com/*"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "public/icons8-clock.gif",
      "48": "public/icons8-clock.gif",
      "128": "public/icons8-clock.gif"
    }
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "modify_headers",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
